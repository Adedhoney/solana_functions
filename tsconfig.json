{
    "compilerOptions": {
        "module": "NodeNext",
        "esModuleInterop": true,
        "target": "ES2020",
        "moduleResolution": "NodeNext",
        "sourceMap": true,
        "outDir": "dist",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "declaration": false,
        "allowJs": true,
        "strict": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "lib": ["es2015"]
}
